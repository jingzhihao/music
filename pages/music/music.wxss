.music_input image {
    width: 80rpx;
    height: 80rpx;
}

.banner_link image {
    width: 100%;
    height: 300rpx;
    border-radius: 55rpx;
}

.banner_wrap {
    background-color: #fff;
    margin: 20rpx auto;
    width: 90%;
    border-radius: 55rpx;
}

.banner_item {
    border-radius: 55rpx;
}

.category_wrap {
    height: 200rpx;
    border-bottom: 1rpx solid #eee;
    width: 95%;
    margin: 0 auto;
}

.category_pic {
    width: 100rpx;
    height: 100rpx;
    border: 1rpx solid #D53B33;
    background-color: #D53B33;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.category_pic image {
    width: 60%;
    height: 60%;
}

.category_text {
    font-size: 28rpx;
    color: #333;
    margin-top: 20rpx;
}

.recommend_wrap {
    padding: 30rpx 30rpx;
    height: 670rpx;
}

.title {
    font-weight: bold;
}

.recommend_tipst {
    width: 150rpx;
}

.show {
    color: rgb(94, 94, 94);
}

.more {
    font-size: 30rpx;
    color: #333;
    width: 160rpx;
    height: 50rpx;
    border: 1rpx solid #eee;
    border-radius: 25rpx;
    text-align: center;
    line-height: 50rpx;
}

.recommend_list {
    padding: 30rpx 0 0;
    flex-wrap: wrap;
}

.recommend_item {
    width: 30%;
    margin-bottom: 30rpx;
}

.recommend_item:nth-child(4),
.recommend_item:nth-child(5),
.recommend_item:nth-child(6) {
    margin-bottom: 0;
}

.recommend_link image {
    width: 100%;
    border-radius: 10rpx;
}

.recommend_name {
    font-size: 26rpx;
    color: #333;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.recommend_msg {
    position: relative;
}

.recommend_play {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    font-size: 24rpx;
    color: #fff;
}

.fa-play image {
    width: 50rpx;
    height: 50rpx;
}

.play_number {
    margin-left: 10rpx;
}

.hot_topic {
    padding: 30rpx;
}

.hot_title {
    font-weight: bold;
    margin-bottom: 30rpx;
}

.hot_item {
    margin-bottom: 20rpx;
}

.hot_pic image {
    width: 160rpx;
}

.hot_info {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding-left: 30rpx;
}